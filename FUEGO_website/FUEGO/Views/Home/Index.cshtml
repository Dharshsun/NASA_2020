<script src='https://api.mapbox.com/mapbox-gl-js/v1.12.0/mapbox-gl.js'></script>


@if (ViewBag.userRegisterSuccess != null)
{
    <div class="alert alert-success mt-3" role="alert">
        @ViewBag.userRegisterSuccess
